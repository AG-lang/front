{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git: Add, Commit & Push",
      "type": "shell",
      // 使用 && 来确保上一个命令成功后才执行下一个
      "command": "git add . && git commit -m '${input:commitMessage}' && git push",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "请输入你的 Commit Message",
      "default": "feat: auto commit by task" // 你可以设置一个默认的提交信息
    }
  ]
}
